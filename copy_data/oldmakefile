CC = g++ 
CPPFLAGS = -Wall -std=c++14 
LDFLAGS =   -L/opt/pgsql/lib -L/usr/lib -lpq -lcryptopp

#Source files
SRC = main.cpp child_table.cpp  AES_Encrypt.cpp MurmurHash3.cpp Hash_Encrypt.cpp  extend_table.cpp pg_copy.cpp

#Object files
OBJ = $(SRC:.cpp=.o)
PGHOME:=/usr/include/postgresql 
PGINC:=/opt/pgsql/include
PGSRC:=/root/pakages/postgresql-11.7/src/include
HOME:=/root/pakages/copy/HashJoinOverEncryptedData/copy_data
CPPFLAGS += -I$(HOME) \
        -I$(PGHOME) \
		-I$(PGINC) \
        -I$(PGSRC)
#Header files
DEPS = child_table.hh MurmurHash3.hh pg_copy.hh AES_Encrypt.hh Hash_Encrypt.hh  extend_table.hh 

TARGET = main
.PHONY:all clean
all: $(TARGET)

$(TARGET): $(OBJ) 
	$(CC)  $(CPPFLAGS) $(LDFLAGS) $^ -o $@

%.o: %.cpp $(DEPS) 
	$(CC)  $(CPPFLAGS) $(LDFLAGS) -c -o $@ $<

clean:
	rm -f $(TARGET) $(OBJ)
